# Development Dockerfile for NestJS Backend
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including devDependencies for hot-reload)
RUN npm install

# Copy source code
COPY . .

# Expose the application port
EXPOSE 3001

# Start the application in development mode with watch
CMD ["npm", "run", "start:dev"]
