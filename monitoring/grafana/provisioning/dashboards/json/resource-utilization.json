{
  "dashboard": {
    "id": null,
    "uid": "resource-utilization",
    "title": "Resource Utilization",
    "tags": ["production", "resources", "infrastructure"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Database Connections",
        "type": "graph",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "database_connections{state=\"total\"}",
            "legendFormat": "Total",
            "refId": "A"
          },
          {
            "expr": "database_connections{state=\"active\"}",
            "legendFormat": "Active",
            "refId": "B"
          },
          {
            "expr": "database_connections{state=\"idle\"}",
            "legendFormat": "Idle",
            "refId": "C"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Connections" },
          { "format": "short" }
        ]
      },
      {
        "id": 2,
        "title": "Database Connection Pool Utilization",
        "type": "gauge",
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "database_connections{state=\"active\"} / database_connections{state=\"total\"}",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 0.6 },
                { "color": "orange", "value": 0.8 },
                { "color": "red", "value": 0.9 }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Memory Usage (Heap)",
        "type": "graph",
        "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "nodejs_heap_size_used_bytes",
            "legendFormat": "Used",
            "refId": "A"
          },
          {
            "expr": "nodejs_heap_size_total_bytes",
            "legendFormat": "Total",
            "refId": "B"
          }
        ],
        "yaxes": [
          { "format": "bytes", "label": "Memory" },
          { "format": "short" }
        ]
      },
      {
        "id": 4,
        "title": "Memory Utilization",
        "type": "gauge",
        "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "nodejs_heap_size_used_bytes / nodejs_heap_size_total_bytes",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 0.7 },
                { "color": "orange", "value": 0.8 },
                { "color": "red", "value": 0.9 }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Event Loop Lag",
        "type": "graph",
        "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "nodejs_eventloop_lag_seconds",
            "legendFormat": "Event Loop Lag",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Lag" },
          { "format": "short" }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": { "params": [1], "type": "gt" },
              "operator": { "type": "and" },
              "query": { "params": ["A", "5m", "now"] },
              "reducer": { "params": [], "type": "avg" },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "60s",
          "handler": 1,
          "name": "High Event Loop Lag",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 6,
        "title": "Garbage Collection Duration",
        "type": "graph",
        "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(nodejs_gc_duration_seconds_sum[5m])",
            "legendFormat": "GC Duration",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Duration" },
          { "format": "short" }
        ]
      },
      {
        "id": 7,
        "title": "Active Handles",
        "type": "graph",
        "gridPos": { "x": 0, "y": 24, "w": 8, "h": 6 },
        "targets": [
          {
            "expr": "nodejs_active_handles_total",
            "legendFormat": "Active Handles",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Handles" },
          { "format": "short" }
        ]
      },
      {
        "id": 8,
        "title": "Active Requests",
        "type": "graph",
        "gridPos": { "x": 8, "y": 24, "w": 8, "h": 6 },
        "targets": [
          {
            "expr": "nodejs_active_requests_total",
            "legendFormat": "Active Requests",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Requests" },
          { "format": "short" }
        ]
      },
      {
        "id": 9,
        "title": "External Memory",
        "type": "graph",
        "gridPos": { "x": 16, "y": 24, "w": 8, "h": 6 },
        "targets": [
          {
            "expr": "nodejs_external_memory_bytes",
            "legendFormat": "External Memory",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "bytes", "label": "Memory" },
          { "format": "short" }
        ]
      },
      {
        "id": 10,
        "title": "CPU Usage (Process)",
        "type": "graph",
        "gridPos": { "x": 0, "y": 30, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total[5m])",
            "legendFormat": "CPU Usage",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "percentunit", "label": "CPU" },
          { "format": "short" }
        ]
      },
      {
        "id": 11,
        "title": "Open File Descriptors",
        "type": "graph",
        "gridPos": { "x": 12, "y": 30, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "process_open_fds",
            "legendFormat": "Open FDs",
            "refId": "A"
          },
          {
            "expr": "process_max_fds",
            "legendFormat": "Max FDs",
            "refId": "B"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "File Descriptors" },
          { "format": "short" }
        ]
      }
    ]
  }
}
